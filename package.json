    "lint-staged": "^15.2.2",
    "tsup": "^8.0.2",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "prettier": "^3.2.5"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "format": "prettier -c --write \"**/**\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
